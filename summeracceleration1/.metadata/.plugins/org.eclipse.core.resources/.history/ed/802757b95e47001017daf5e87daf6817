package shape;

public class circle {
	private double r;
	private point c;
	
	//methods
	public void setR(double r) {
		this.r= (r>=0 && r<=10)?r:0;
	}
	public void setC(point p) {
		this.c = p;
	}
	private circle() {
		this.r=0;
		\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\this.c=new point(0,0);
	}
	public circle(double r,double x,double y) {
		this();
		this.setR(r);
		this.setC(new point(x,y));
	}
	

}
